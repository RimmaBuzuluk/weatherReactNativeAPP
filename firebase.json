{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "**/*.@(ttf|otf|woff|woff2)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "font/ttf"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
